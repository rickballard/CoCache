{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opename.org/schema/scripttagger-session.json",
  "title": "ScripTagger Session",
  "type": "object",
  "required": [
    "session_id",
    "source",
    "segments",
    "dims"
  ],
  "properties": {
    "session_id": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "source": {
      "type": "object",
      "required": [
        "type",
        "id"
      ],
      "properties": {
        "type": {
          "enum": [
            "url",
            "file",
            "mic"
          ]
        },
        "id": {
          "type": "string"
        }
      }
    },
    "dims": {
      "type": "array",
      "items": {
        "enum": [
          "TruthAlignment",
          "EvidenceHygiene",
          "CivicConduct",
          "Anti-Manipulation",
          "AmplificationQuality"
        ]
      }
    },
    "segments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "idx",
          "text",
          "scores"
        ],
        "properties": {
          "idx": {
            "type": "integer",
            "minimum": 0
          },
          "text": {
            "type": "string"
          },
          "time": {
            "type": "object",
            "properties": {
              "start": {
                "type": "number"
              },
              "end": {
                "type": "number"
              }
            }
          },
          "scores": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "dim",
                "score"
              ],
              "properties": {
                "dim": {
                  "type": "string"
                },
                "score": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "explain": {
                  "type": "string"
                },
                "evidence": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "uri"
                  }
                }
              }
            }
          }
        }
      }
    },
    "speaker_hypothesis": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "source_url": {
            "type": "string",
            "format": "uri"
          },
          "method": {
            "enum": [
              "url-meta",
              "channel",
              "caption",
              "voiceprint",
              "face",
              "user-entry"
            ]
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    },
    "event_match": {
      "type": "object",
      "properties": {
        "canonical_url": {
          "type": "string",
          "format": "uri"
        },
        "fingerprints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "summary": {
      "type": "object",
      "properties": {
        "best_claims": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string"
              },
              "evidence": {
                "type": "array",
                "items": {
                  "type": "string",
                  "format": "uri"
                }
              },
              "rationale": {
                "type": "string"
              }
            }
          }
        },
        "questions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string"
              },
              "needed_evidence": {
                "type": "string"
              },
              "rationale": {
                "type": "string"
              }
            }
          }
        },
        "include_transcript": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "handoff": {
      "type": "object",
      "properties": {
        "used": {
          "type": "boolean",
          "default": false
        },
        "method": {
          "enum": [
            "web-share",
            "clipboard",
            "mailto",
            "unknown"
          ]
        },
        "target_hint": {
          "type": "string"
        },
        "at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "audio_profile": {
      "type": "object",
      "properties": {
        "mode": {
          "enum": [
            "auto",
            "crowd",
            "stage",
            "quiet"
          ]
        },
        "calibrated_dbA": {
          "type": "number"
        },
        "features": {
          "type": "array",
          "items": {
            "enum": [
              "agc",
              "ns",
              "aec",
              "beamforming",
              "voice-isolation"
            ]
          }
        }
      }
    },
    "stt": {
      "type": "object",
      "properties": {
        "engine": {
          "type": "string"
        },
        "lang": {
          "type": "string"
        },
        "avg_confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "status": {
          "enum": [
            "preliminary",
            "upgraded",
            "verified"
          ]
        }
      }
    },
    "transcript_sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "enum": [
              "local-audio",
              "remote-captions",
              "remote-audio"
            ]
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "fingerprint": {
            "type": "string"
          },
          "added_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
    "rep_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "actor": {
            "type": "string"
          },
          "target": {
            "type": "string"
          },
          "type": {
            "enum": [
              "credit",
              "demerit"
            ]
          },
          "reason": {
            "type": "string"
          },
          "evidence_url": {
            "type": "string",
            "format": "uri"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "status": {
            "enum": [
              "unverified",
              "queued",
              "published"
            ]
          }
        }
      }
    }
  }
}