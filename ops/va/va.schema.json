{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Versioned Asset (VA)",
  "type": "object",
  "required": ["id","path","kind","stamp","state"],
  "properties": {
    "id":{"type":"string"},
    "path":{"type":"string"},
    "name":{"type":"string"},
    "kind":{"type":"string"},
    "origin":{"type":"string"},
    "stamp":{"type":"string","pattern":"^\\d{4}-\\d{2}-\\d{2}_\\d{6}$"},
    "semver":{"type":"string"},
    "state":{"type":"string","enum":["draft","curated","deprecated"]},
    "tags":{"type":"array","items":{"type":"string"}},
    "metrics":{"type":"object","properties":{
      "bytes":{"type":"integer"},
      "words":{"type":"integer"},
      "headings":{"type":"array","items":{"type":"string"}}
    }},
    "lineage":{"type":"array","items":{"type":"string"}}
  }
}
