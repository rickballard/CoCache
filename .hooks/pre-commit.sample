#!/bin/sh
# Guard: canonical BN must contain exact 'Being Noname'.
f="Insights/BN_Story_being-noname_v1.0.md"
test -f "$f" || exit 0
if ! grep -qiE '\bBeing[[:space:]]+Noname\b' "$f"; then
  echo "Guard: expected exact 'Being Noname' in $f" >&2
  exit 1
fi

# Optional late-hour nudge
hour=$(date +%H 2>/dev/null || echo "99")
if [ "$hour" -ge 1 ] && [ "$hour" -le 5 ]; then
  echo "Note: late hour detected; consider BPOE cool-down before merging." >&2
fi
